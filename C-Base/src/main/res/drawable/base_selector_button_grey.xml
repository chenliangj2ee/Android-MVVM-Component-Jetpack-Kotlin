<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0px" android:color="#80C1C9" />
            <corners android:radius="5dp" />
            <solid android:color="#fff" />
            <gradient android:angle="90" android:endColor="#ECEFF3" android:startColor="#ECEFF3"></gradient>
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0px" android:color="#80C1C9" />
            <corners android:radius="5dp" />
            <solid android:color="#fff" />
            <gradient android:angle="90" android:endColor="#F6F7F8" android:startColor="#F6F7F8"></gradient>
        </shape>

    </item>
</selector>


